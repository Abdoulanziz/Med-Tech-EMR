                        <h2 class="special-heading">Recent Visits</h2>
                        <table id="single-patient-visits" class="display" style="width:100%;margin-top:.5rem;">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th>Doctor</th>
                                    <th>Status</th>
                                    <th>Actions</th>
